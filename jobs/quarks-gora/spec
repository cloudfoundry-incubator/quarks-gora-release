- name: quarks-gora
  type: quarks-gora
  properties:
  - quarks-gora.port
  - quarks-gora.cert
  - quarks-gora.ssl

properties:
  quarks-gora.port:
    default: 4443
    description: "Quarks-gora listening port."
  quarks-gora.cert:
    default: ""
    description: "The quarks-gora cert."
  quarks-gora.key:
    default: ""
    description: "The private key of the certificate."
  quarks-gora.ssl:
    default: "false"
    description: "Enable Gora via SSL/TLS"
  text_message:
    default: ""
    description: "A text message which is set in the environment"
